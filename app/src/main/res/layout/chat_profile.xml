<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_white">


    <RelativeLayout
        android:id="@+id/header_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/top_bar"
        android:weightSum="3">


        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/friendName_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="iFriend1"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>


    <ListView
        android:id="@+id/chat_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_ll"

        android:layout_below="@+id/header_ll"
        android:divider="@null" />


    <RelativeLayout
        android:id="@+id/bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chat_send_msg_height"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/ifriend_edt_bg">


        <EditText
            android:id="@+id/msg_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/chat_field_bg"
            android:ems="5"
            android:hint="Type a message"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textColorHint="@color/light_gray" />


        <ImageView
            android:id="@+id/send_btn"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ifriend_chat_send" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/webview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_ll"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#555555">


            <LinearLayout
                android:id="@+id/feed_view_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/support_close_tp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/feed_view_arrow_size"
                    android:layout_height="@dimen/feed_view_arrow_size"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_left_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right|center"
                    android:paddingRight="@dimen/support_close_tp"
                    android:text="@string/back"
                    android:textColor="@color/white"
                    android:textSize="@dimen/feed_view_back_ts" />
            </LinearLayout>


            <TextView
                android:id="@+id/feed_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/feed_view_share"
                android:layout_toRightOf="@+id/feed_view_back"
                android:layout_toStartOf="@+id/feed_view_share"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/feed_view_view_title_ts" />

        </RelativeLayout>

        <WebView
            android:id="@+id/feed_view_vb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayout">

        </WebView>
    </RelativeLayout>


    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true" />
</RelativeLayout>