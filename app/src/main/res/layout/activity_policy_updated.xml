<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:background="@color/glimpse_gray"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/safe_"
                    android:background="@color/homemenu"
                    android:textColor="@color/white"
                    android:textSize="@dimen/policy_title_ts"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/upper_line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"


                android:layout_weight="13.5">

                <WebView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/webview"
                    >

                </WebView>

                <!--<ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/policy_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/policy_sides"
                            android:textColor="@color/white"
                            android:textSize="@dimen/policy_simple_ts"
                            android:visibility="visible" />
                    </LinearLayout>

                </ScrollView>-->

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_height"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/policy_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/ic_home" />


            <TextView
                android:id="@+id/policy_get_support"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:scaleType="centerCrop"
                android:gravity="center"
                android:textSize="22sp"
                android:text="get support"
                android:textColor="@color/black"
                android:src="@color/white" />

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/caution_layout" />

</RelativeLayout>
