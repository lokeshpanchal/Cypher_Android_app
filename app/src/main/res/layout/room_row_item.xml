<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/room_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:src="@drawable/ic_silent_icon"
        android:layout_margin="@dimen/support_item_image_p" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/room_owner"
                android:textColor="#454545"
                android:visibility="gone"
                android:text="~cypher"/>
            <TextView
                android:id="@+id/room_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:ellipsize="end"
                android:paddingLeft="15dp"
                android:paddingRight="3dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:text="room name "
                android:lines="1"
                android:textColor="@color/grey_bar"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:id="@+id/hug"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_not_hug"/>

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="-6dp"
                    android:id="@+id/hug_count"
                    android:text="20"
                    android:gravity="center"
                    android:textSize="8sp"
                    android:background="@drawable/like_me_hug_count_bt"
                    android:textColor="@color/black"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/heart"
                    android:background="@drawable/ic_heart"/>

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="-6dp"
                    android:text="20"
                    android:id="@+id/heart_count"
                    android:gravity="center"
                    android:textSize="8sp"
                    android:background="@drawable/like_me_hug_count_bt"
                    android:textColor="@color/black"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/me2"
                    android:background="@drawable/ic_me_off"/>
.
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="-6dp"
                    android:text="20"
                    android:gravity="center"
                    android:id="@+id/me2_count"
                    android:textSize="8sp"
                    android:background="@drawable/like_me_hug_count_bt"
                    android:textColor="@color/black"/>



                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/comment"
                    android:background="@drawable/ic_verified_icon"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>