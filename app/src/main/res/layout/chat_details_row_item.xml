<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/chat_receive_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/chat_receview_new"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/receive_message_text"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Hi! new message received.. "
                android:textColor="@color/blue"
                android:textSize="16sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/receive_message_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="right"
            android:text="Time"
            android:textColor="@color/blue"
            android:textSize="10sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/sent_msg_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/chat_send_new"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/sent_message_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingTop="3dp"
                android:paddingRight="5dp"
                android:layout_gravity="center_vertical"
                android:text="Hi! new message send.."
                android:textColor="@color/green"
                android:textSize="16sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/sent_message_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="right"
            android:text="Time as fs asd "
            android:textColor="@color/green"
            android:textSize="10sp" />





    </LinearLayout>
</LinearLayout>