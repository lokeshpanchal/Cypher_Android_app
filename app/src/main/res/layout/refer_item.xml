<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="@dimen/notification_item_icon_size"
        android:layout_gravity="center"
        android:layout_margin="@dimen/support_item_image_p"
        android:layout_weight="2"
        android:src="@drawable/ic_avatar" />

    <TextView
        android:id="@+id/refer_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:layout_margin="@dimen/support_item_image_p"
        android:layout_weight="7"
        android:gravity="left"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/support_close_ts" />

    <ImageView
        android:id="@+id/refer_item_accept_iv"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/support_item_image_p"
        android:layout_weight="1"
        android:src="@drawable/ic_not_accepted" />
</LinearLayout>