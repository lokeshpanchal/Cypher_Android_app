<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/banner_color"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/feed_main"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/feed_root"
            android:layout_width="match_parent"
            android:layout_height="@dimen/feed_back_height"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/verify_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true">


                <TextView
                    android:id="@+id/iFriend_icon"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/getsupport_shape"
                    android:text="Add as iFriend"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="#111111"
                    android:visibility="gone"

                    />

            </LinearLayout>




        </RelativeLayout>

<!--
        <ImageView
            android:id="@+id/doowapp_feed"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"

            android:layout_marginTop="370dp"
            android:src="@drawable/doowapp"
            android:visibility="gone" />-->


        <TextView
            android:id="@+id/feed_text"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerVertical="true"
            android:shadowColor="#000000"
            android:shadowRadius="10"
            android:textSize="15sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:paddingBottom="@dimen/feed_padding_sides"
            android:paddingLeft="10dp"
            android:paddingRight="@dimen/feed_padding_sides"
            android:paddingTop="@dimen/feed_padding_sides" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/foodcoupon"
            android:visibility="gone"

            android:background="@drawable/gift"/>

        <LinearLayout
            android:id="@+id/support_bar"

            android:layout_width="match_parent"
            android:layout_height="@dimen/feed_support_height"
            android:layout_marginTop="330dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></View>

            <TextView
                android:id="@+id/feed_get_support"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/getsupport_shape"
                android:gravity="center"
                android:text="@string/get_support"
                android:textColor="#000000"
                android:textSize="@dimen/feed_support_ts" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/feed_bottom_bar_height"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"

            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <!--            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"></View>-->


                <ImageView
                    android:id="@+id/feed_envelope"
                    android:layout_width="@dimen/feed_envelope_size"
                    android:layout_height="@dimen/feed_envelope_size"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_envelope"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"></View>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/feed_hug"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:src="@drawable/ic_not_hug" />

                <TextView
                    android:id="@+id/feed_hugs_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2.5"
                    android:gravity="start|center"
                    android:padding="@dimen/feed_count_padding"
                    android:textColor="@color/white"
                    android:textSize="@dimen/feed_count_ts" />

                <ImageView
                    android:id="@+id/feed_heart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:src="@drawable/ic_heart" />

                <TextView
                    android:id="@+id/feed_hearts_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2.5"
                    android:gravity="start|center"
                    android:padding="@dimen/feed_count_padding"
                    android:textColor="@color/white"
                    android:textSize="@dimen/feed_count_ts" />

                <ImageView
                    android:id="@+id/feed_me2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:src="@drawable/ic_me_off" />

                <TextView
                    android:id="@+id/feed_me2s_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2.5"
                    android:gravity="start|center"
                    android:padding="@dimen/feed_count_padding"
                    android:textColor="@color/white"
                    android:textSize="@dimen/feed_count_ts" />


                <LinearLayout
                    android:id="@+id/feed_verify"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/CommentShadow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:text="@string/comment" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"

                        android:layout_weight="4"
                        android:layout_marginRight="@dimen/feed_verify_margin"
                        android:src="@drawable/ic_verified_icon"
                        android:visibility="visible" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="0.5"></View>



            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/support_tutorial_view"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/feed_root"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="@dimen/tutorial_third_triangle_w"
                android:layout_height="@dimen/tutorial_plus_triangel_h"
                android:layout_gravity="center"
                android:background="@drawable/tutotial_triangle_third" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/tutorial_shape"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/tutorial_plus_text_padding"
                    android:text="@string/click_to_get_support"
                    android:textColor="@color/back"
                    android:textSize="@dimen/activity_ts" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="@dimen/tutorial_plus_view_height"
                    android:background="@color/grey"></View>

                <TextView
                    android:id="@+id/support_tutorial_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/tutorial_plus_text_padding"
                    android:text="@string/_ok"
                    android:textColor="@color/back"
                    android:textSize="@dimen/activity_ts" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/verified_tutorial_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"

            android:layout_marginRight="@dimen/tutorial_plus_margin_side"

            android:orientation="vertical"
            android:visibility="gone">

  <!--          <View
                android:layout_width="@dimen/tutorial_third_triangle_w"
                android:layout_height="@dimen/tutorial_plus_triangel_h"
                android:layout_gravity="right"
                android:background="@drawable/tutotial_triangle_third" />-->





            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/tutorial_shape"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:padding="@dimen/tutorial_secret_padding"
                            android:text="@string/if_u_are_verified"
                            android:textColor="@color/back"
                            android:textSize="@dimen/activity_ts" />

                        <ImageView
                            android:layout_width="@dimen/tutorial_secre_ite_size"
                            android:layout_height="@dimen/tutorial_secre_ite_size"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_verified_icon" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/tutorial_secret_padding"
                        android:text="@string/to_comment"
                        android:textColor="@color/back"
                        android:textSize="@dimen/activity_ts" />
                </LinearLayout>


                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />

                <TextView
                    android:id="@+id/verified_tutorial_ok"
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/tutorial_plus_text_padding"
                    android:text="@string/_ok"
                    android:textColor="@color/back"
                    android:textSize="@dimen/activity_ts" />




            </LinearLayout>

            <View
                android:layout_width="@dimen/tutorial_plus_triangle_w"
                android:layout_height="@dimen/tutorial_plus_triangel_h"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/tutorial_plus_margin_side"
                android:layout_marginBottom="30dp"
                android:background="@drawable/tutotiral_triangle" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/flag_tutorial_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feed_front_panel"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="@dimen/tutorial_third_triangle_w"
                android:layout_height="@dimen/tutorial_plus_triangel_h"
                android:layout_gravity="center"
                android:background="@drawable/tutotial_triangle_third" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/tutorial_shape"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/tutorial_plus_text_padding"
                    android:text="@string/tap_flag"
                    android:textColor="@color/back"
                    android:textSize="@dimen/activity_ts" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="@dimen/tutorial_plus_view_height"
                    android:background="@color/grey"></View>

                <TextView
                    android:id="@+id/flag_tutorial_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/tutorial_plus_text_padding"
                    android:text="@string/_ok"
                    android:textColor="@color/back"
                    android:textSize="@dimen/activity_ts" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/feed_tutorial_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/tutorial_shape"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tutorial_feed_item_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/tutorial_plus_text_padding"
                    android:textColor="@color/back"
                    android:textSize="@dimen/activity_ts" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="@dimen/tutorial_plus_view_height"
                    android:background="@color/grey"></View>

                <TextView
                    android:id="@+id/feed_tutorial_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/tutorial_plus_text_padding"
                    android:text="@string/_ok"
                    android:textColor="@color/back"
                    android:textSize="@dimen/activity_ts" />
            </LinearLayout>

            <View
                android:id="@+id/tutorial_feed_triangle"
                android:layout_width="@dimen/tutorial_third_triangle_w"
                android:layout_height="@dimen/tutorial_plus_triangel_h"
                android:layout_gravity="right"
                android:background="@drawable/tutotiral_triangle_second" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/feed_delete_checkbox"
            android:layout_width="@dimen/check_box_size"
            android:layout_height="@dimen/check_box_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/feed_verify_margin"
            android:background="@drawable/checkbox_selector"
            android:button="@null"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/feed_panel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/feed_back_height"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/feed_blur"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/panel_on_blur_margin"
                android:layout_marginRight="@dimen/panel_on_blur_margin"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"></View>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:gravity="center|left"
                    android:text="@string/total_social_p"
                    android:textColor="@color/white"
                    android:textSize="@dimen/feed_total_ts" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/feed_total_hugs"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/feed_total_ts" />

                    <TextView
                        android:id="@+id/feed_total_hearts"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/feed_total_ts" />

                    <TextView
                        android:id="@+id/feed_total_me2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/feed_total_ts" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/panel_icon_size"
                            android:layout_height="@dimen/panel_icon_size"
                            android:layout_gravity="center"
                            android:background="@drawable/grey_circle"
                            android:padding="2dp"
                            android:src="@drawable/ic_hug" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/panel_icon_size"
                            android:layout_height="@dimen/panel_icon_size"
                            android:layout_gravity="center"
                            android:background="@drawable/grey_circle"
                            android:padding="2dp"
                            android:src="@drawable/ic_hearted" />
                    </FrameLayout>


                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/panel_icon_size"
                            android:layout_height="@dimen/panel_icon_size"
                            android:layout_gravity="center"
                            android:background="@drawable/grey_circle"
                            android:padding="2dp"
                            android:src="@drawable/ic_me" />
                    </FrameLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"></View>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/feed_front_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/feed_flag_height"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/feed_flag"
                android:layout_width="@dimen/flag_icon_width"
                android:layout_height="@dimen/feed_icon_size_ts"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/feed_flag_height"
                android:src="@drawable/ic_flag"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/feed_translate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/feed_verify_margin"
                android:gravity="center"
                android:text="hide"
                android:textColor="@color/white"
                android:textSize="@dimen/feed_support_ts"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/feed_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/feed_verify_margin"
                android:gravity="center"
                android:text="@string/share"
                android:textColor="@color/white"
                android:textSize="@dimen/feed_support_ts"
                android:visibility="invisible" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feed_main"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <ProgressBar
            android:id="@+id/feed_pb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:visibility="gone" />
    </LinearLayout>


    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/feed_mutual_view_pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/feed_back_height"
        android:background="@color/white"
        android:visibility="gone" />

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/feed_mutual_performance"
        android:layout_width="match_parent"
        android:layout_height="@dimen/feed_back_height"
        android:visibility="gone" />

</RelativeLayout>
