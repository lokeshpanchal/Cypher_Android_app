<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/top_bar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/sign_up_close"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="onClick"
                        android:src="@drawable/back" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:layout_below="@+id/sign_up_close"
                        android:layout_centerInParent="true"
                        android:background="@drawable/signup_logo" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:padding="6dp"
                        android:src="@drawable/name_icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="9"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/sign_up_username_input"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="9"
                            android:background="@android:color/transparent"
                            android:hint="@string/username_hint"
                            android:maxLength="50"
                            android:paddingRight="@dimen/sign_up_edit_input_tp"

                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/login_edit_input_ts"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white"></View>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:padding="6dp"
                        android:src="@drawable/lock" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="9"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/sign_up_pin_input"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="9"
                            android:background="@android:color/transparent"
                            android:hint="@string/pin_hint"
                            android:inputType="numberPassword"
                            android:maxLength="4"
                            android:paddingRight="@dimen/sign_up_edit_input_tp"

                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/login_edit_input_ts"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white"></View>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:padding="6dp"
                        android:src="@drawable/dob_icon" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="9"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="9"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1.5"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/date_of_birth"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"
                                    android:gravity="left"
                                    android:text="date of birth"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/stats_main_ts"
                                    android:textStyle="bold" />


                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1" />
                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white"></View>
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/sign_up_question_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/sign_up_padding"
                    android:layout_marginRight="@dimen/sign_up_padding"
                    android:layout_marginTop="25dp"
                    android:layout_weight="2.5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:background="@drawable/white_line_border"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/sign_up_question_tv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:text="@string/questions_prompt"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sign_up_spinner_item_ts"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/securty_down_arrow" />
                    </LinearLayout>

                </RelativeLayout>

                <EditText
                    android:id="@+id/sign_up_answer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1.6"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:hint="answer"
                    android:longClickable="false"
                    android:maxLength="40"
                    android:paddingLeft="@dimen/sign_up_edit_input_tp"
                    android:paddingRight="@dimen/sign_up_edit_input_tp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/login_edit_input_ts"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:background="@color/white"></View>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="gender"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/sign_up_padding"
                    android:layout_marginRight="@dimen/sign_up_padding"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1.5"
                    android:orientation="horizontal">




                    <ImageView
                        android:id="@+id/male_gender_radio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:padding="3dp"
                        android:src="@drawable/gender_sel_radio"


                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.5"
                        android:gravity="left"

                        android:text="male"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />




                    <ImageView
                        android:id="@+id/female_gender_radio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@drawable/gender_unsel_radio"
                        android:padding="3dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:text="female"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />



                    <ImageView
                        android:id="@+id/other_gender_radio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@drawable/gender_unsel_radio"
                        android:padding="3dp"

                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.5"
                        android:gravity="left"

                        android:text="other"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />




                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:text="By signing up, you agree to abide by our"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/privacy_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:text="privacy and safeguarding policy"
                    android:textColor="#0033ff"
                    android:textSize="16sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"></View>

                <TextView
                    android:id="@+id/sign_up_btn"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:text="@string/sign_up"
                    android:textColor="@color/top_bar"
                    android:textSize="@dimen/login_sign_up"
                    android:textStyle="bold" />


            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/webview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/glimpse_gray"
        android:visibility="gone">

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="35dp"

            ></WebView>

        <TextView
            android:id="@+id/close_web"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:background="@color/homemenu"
            android:gravity="center"
            android:text="Close"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/special_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"

        android:padding="10dp"
        android:text="Do you have a code?"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/ruby_code_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55777777"
        android:clickable="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/search_top_header">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Code"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search_center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edt_search"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="20dp"
                        android:background="@drawable/alma_bg"
                        android:gravity="top"
                        android:hint="Enter code here"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:textColorHint="@color/buller_color"
                        android:singleLine="true" />


                    <TextView
                        android:id="@+id/submit_button"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/search_cancel_button"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="Cancel"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>



    <ProgressBar
        android:id="@+id/sign_up_progress_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/sign_up_progress_bg_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44999999"
        android:clickable="true"
        android:visibility="gone" />
</RelativeLayout>