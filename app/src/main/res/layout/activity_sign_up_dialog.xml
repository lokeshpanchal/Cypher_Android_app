<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comments_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cancel_button"
        android:background="#99333333"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sign_up_dialog_height"
      android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/sign_up_dialog_margin"
        android:layout_marginRight="@dimen/sign_up_dialog_margin"
        android:orientation="vertical"
        android:clickable="true"
        android:background="@drawable/signup_popup">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/recieved_border"
            android:paddingBottom="7dp"
            android:paddingLeft="35dp"
            android:layout_gravity="center"
            android:paddingRight="35dp"
            android:paddingTop="7dp"
            android:text="Sign Up"
            android:textColor="@color/add_as_ifreind_color"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signin_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/recieved_border"
            android:paddingBottom="7dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:layout_gravity="center"
            android:paddingTop="7dp"
            android:text="Sign-In"
            android:textColor="@color/add_as_ifreind_color"
            android:textSize="18sp"
            android:textStyle="bold" />



    </LinearLayout>


</RelativeLayout>
